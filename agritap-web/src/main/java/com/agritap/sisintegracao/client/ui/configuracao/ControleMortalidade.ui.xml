<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:l="urn:import:com.google.gwt.core.ext.linker"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">

	<b:Row>
		<b:Column size="XS_0">
				<b:Heading size="H1" styleName="page-header" text="Controle Mortalidade" />
			<b:Panel >
				<b:PanelBody>
				    <b:Form>
						<b:FieldSet>
						    <b:FormGroup>
						      <b:FormLabel for="formProdutor">Produtor</b:FormLabel>
						      <b:FormControlStatic b:id="formProdutor">Rafaella (pego a partir do usuario logado)</b:FormControlStatic>
					        </b:FormGroup>
						
						    <b:FormGroup>
						      <b:FormLabel for="formQuantidade"> Mortos na viagem </b:FormLabel>
						    </b:FormGroup>
						     
						    <b:FormGroup> 
						      <b:FormLabel for="formQuantidade"> Quantidade </b:FormLabel>
						      <b:TextBox placeholder="" b:id="formQuantidade"/>
						    </b:FormGroup>
					        
					        <b:FormGroup>  
						      <b:FormLabel for="formQuantidade"> Data </b:FormLabel>
		                      <b2:DatePicker autoClose="true"/>
                              <b:Modal title="DatePicker in Modal" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="myModal" ui:field="modal1">  
                              <b:ModalBody>
                              <b2:DatePicker/>
                              </b:ModalBody>
                              <b:ModalFooter>
                              <b:Button type="DANGER" dataDismiss="MODAL">Close</b:Button>
                              </b:ModalFooter>
                              </b:Modal>
		                    </b:FormGroup>
						   
						    <b:FormGroup>
						      <b:FormLabel for="formQuantidade">Mortos por doença</b:FormLabel>
						    </b:FormGroup>  
						    
						    <b:FormGroup> 
						      <b:FormLabel for="formQuantidade"> Quantidade </b:FormLabel>
						      <b:TextBox placeholder="" b:id="formQuantidade"/>
						    </b:FormGroup>
						      
						    <b:FormGroup>  
						      <b:FormLabel for="formQuantidade"> Data </b:FormLabel>
		                      <b2:DatePicker autoClose="true"/>
                              <b:Modal title="DatePicker in Modal" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="myModal" ui:field="modal">  
                              <b:ModalBody>
                              <b2:DatePicker/>
                              </b:ModalBody>
                              <b:ModalFooter>
                              <b:Button type="DANGER" dataDismiss="MODAL">Close</b:Button>
                              </b:ModalFooter>
                              </b:Modal>
		                    </b:FormGroup>
						  
						    <b:FormGroup>
						      <b:FormLabel for="formQuantidade"> Tipo de doença </b:FormLabel>						    
						        <b:ButtonGroup>
                                <b:Button dataToggle="DROPDOWN"> Seleciona </b:Button>
                                  <b:DropDownMenu>
                                   <b:AnchorListItem>tipo 1</b:AnchorListItem>
                                   <b:AnchorListItem>tipo 2</b:AnchorListItem>
                                   <b:AnchorListItem>tipo 3</b:AnchorListItem>
                                  </b:DropDownMenu>
                                </b:ButtonGroup>
                            </b:FormGroup>
                            <b:Button type="PRIMARY" ui:field="salvarBtn">Salvar</b:Button>
								<b:Button addStyleNames="col-xs-offset-1" ui:field="cancelarBtn">Cancelar</b:Button>
								<b:Button type="DANGER" addStyleNames="col-xs-offset-1"
									ui:field="excluirBtn">Excluir</b:Button>
							</b:FieldSet>
                     </b:Form>
                  </b:PanelBody>
              </b:Panel>
          </b:Column>
	</b:Row>
</ui:UiBinder> 