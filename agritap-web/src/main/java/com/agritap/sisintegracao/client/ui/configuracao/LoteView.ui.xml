<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:l="urn:import:com.google.gwt.core.ext.linker"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
	xmlns:ag="urn:import:com.agritap.sisintegracao.client.ui.component">

	<g:HTMLPanel>
	
	<b:Row>
		<b:Column size="XS_12">
		<b:Heading size="H1" ui:field="loteTitulo" styleName="page-header" text="Lote" />
			<b:Panel >
				<b:PanelHeader>
					<b:Heading size="H3"  text="Dados Gerais" />
				</b:PanelHeader>
				<b:PanelBody>
				    <b:Form>
				    <b:Row>
    					<b:Column size="XS_12">
						    <b:FormGroup>
						      <b:FormLabel for="formProdutor">Produtor</b:FormLabel>
						      <b:ListBox ui:field="produtoresField"/>
					        </b:FormGroup>
    					</b:Column>
    					<b:Column size="SM_6">
						    <b:FormGroup>
						      <b:FormLabel for="moduloField">Módulo</b:FormLabel>
						      <b:ListBox ui:field="moduloField" />
						    </b:FormGroup>
						</b:Column>
    					<b:Column size="SM_6">
						    <b:FormGroup>
						      <b:FormLabel for="tecnicoField">Técnico</b:FormLabel>
						      <b:ListBox ui:field="tecnicoField" />
						    </b:FormGroup>
						</b:Column>
    					<b:Column size="SM_6">
						    <b:FormGroup>
						      <b:FormLabel for="granjeiroField">Granjeiro</b:FormLabel>
						      <b:ListBox ui:field="granjeiroField" />
						    </b:FormGroup>
						</b:Column>
    					<b:Column size="XS_6,SM_3">
						    <b:FormGroup>  
						      <b:FormLabel for="dataAlojamentoField">Data do alojamento</b:FormLabel>
								<b2:DatePicker placeholder="Data do alojamento"
									ui:field="dataAlojamentoField" format="dd-mm-yyyy" language="PT_BR" />
		                    </b:FormGroup>
	                    </b:Column>
    					<b:Column size="XS_6,SM_3">
						    <b:FormGroup>  
						      <b:FormLabel for="dataAlojamentoField">Data de saída</b:FormLabel>
								<b2:DatePicker placeholder="Data de Saída"
									ui:field="dataSaidaField" format="dd-mm-yyyy" language="PT_BR" />
		                    </b:FormGroup>
	                    </b:Column>
                    </b:Row>
						</b:Form>
  				</b:PanelBody>
			</b:Panel>
			
			
			
			<b:Panel >
				<b:PanelHeader>
					<b:Heading size="H3"  text="Detalhamento das Origens" />
				</b:PanelHeader>
				<b:PanelBody>
					<g:HTMLPanel>
					<g:HTMLPanel ui:field="blockQuoteOrigens">
					<blockquote>
					  <p>Informe as origens do alojamento detalhadamente aqui OU apenas o resumo no painel abaixo</p>
					</blockquote>
					</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="blocoDetalhamentoOrigem">
					</g:HTMLPanel>
				    <b:Form>
				    	<b:Button type="PRIMARY" ui:field="addOrigem">Informar Origem</b:Button>
					</b:Form>
  				</b:PanelBody>
			</b:Panel>
			<b:Panel >
				<b:PanelHeader>
					<b:Heading size="H3"  text="Dados do Alojamento" />
				</b:PanelHeader>
				<b:PanelBody>
				    <b:Form>
				    <b:Row>
	
    					<b:Column size="XS_6,MD_4">
						    <b:FormGroup>
						      <b:FormLabel for="quantidadeAlojadaField">Quantidade Alojada</b:FormLabel>
						      <b:IntegerBox placeholder="Quantidade de Animais Alojados" ui:field="quantidadeAlojadaField"/>
					        </b:FormGroup>
    					</b:Column>
    					<b:Column size="XS_6,MD_4">
						    <b:FormGroup>
						      <b:FormLabel for="pesoMedioAlojadoField">Peso Médio Alojado</b:FormLabel>
						      <ag:BigDecimalBox  placeholder="Peso Médio de Alojamento" ui:field="pesoMedioAlojadoField" />
					        </b:FormGroup>
    					</b:Column>
    					<b:Column size="XS_6,MD_4">
						    <b:FormGroup>
						      <b:FormLabel for="idadeMediaAlojadaField">Idade Média</b:FormLabel>
						      <b:IntegerBox placeholder="Idade Média de Animais Alojados" ui:field="idadeMediaAlojadaField"/>
					        </b:FormGroup>
    					</b:Column>
    					<b:Column size="XS_6,MD_4">
						    <b:FormGroup>
						      <b:FormLabel for="sexoField">Sexo</b:FormLabel>
						      <b:ListBox ui:field="sexoField"></b:ListBox>
					        </b:FormGroup>
    					</b:Column>
    					<b:Column size="XS_6,MD_4">
						    <b:FormGroup>
						      <b:FormLabel for="tipoOrigemField">Tipo de Origem</b:FormLabel>
						      <b:ListBox ui:field="tipoOrigemField"></b:ListBox>
					        </b:FormGroup>
    					</b:Column>
    					<b:Column size="XS_6,MD_4">
						    <b:FormGroup>
						      <b:FormLabel for="quantidadeOrigensField">Quantidade de Origens</b:FormLabel>
						      <b:IntegerBox placeholder="Quantidade de Origens distintas"  ui:field="quantidadeOrigensField"/>
					        </b:FormGroup>
    					</b:Column>
   					</b:Row>	
					</b:Form>
  				</b:PanelBody>
			</b:Panel>
			<b:Panel >
				<b:PanelHeader>
					<b:Heading size="H3"  text="Dados do Abate" />
				</b:PanelHeader>
				<b:PanelBody>
				    <b:Form>
					</b:Form>
  				</b:PanelBody>
			</b:Panel>

		</b:Column>
	</b:Row>
</g:HTMLPanel>

</ui:UiBinder> 