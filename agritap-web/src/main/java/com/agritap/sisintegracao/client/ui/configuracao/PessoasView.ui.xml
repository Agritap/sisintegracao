<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:l="urn:import:com.google.gwt.core.ext.linker" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">


	<g:HTMLPanel>
		<b:Row>
			<b:Column size="XS_12">
				<b:Heading size="H1" styleName="page-header" text="Pessoas" />
			</b:Column>
		</b:Row>

		<b:Row ui:field="formRow" visible="false">
			<b:Column size="XS_12">
				<b:Panel>
					<b:PanelBody>

						<b:ListGroup ui:field="errorBox" visible="false">
						</b:ListGroup>
						<b:Form ui:field="form">
							<b:FieldSet>

								<b:Row>
									<b:Column size="XS_12,SM_6">
										<b:FormGroup>
											<b:FormLabel for="nomeField"> Nome </b:FormLabel>
											<b:TextBox placeholder="Nome" ui:field="nomeField" />
										</b:FormGroup>
									</b:Column>
									<b:Column size="XS_12,SM_6">
										<b:FormGroup>
											<b:FormLabel for="apelidoField"> Apelido </b:FormLabel>
											<b:TextBox placeholder="Apelido" ui:field="apelidoField" />
										</b:FormGroup>
									</b:Column>
									<b:Column size="XS_12,SM_6">
										<b:FormGroup>
											<b:FormLabel for="cpfField"> Cpf </b:FormLabel>
											<b:TextBox placeholder="Cpf" ui:field="cpfField" />
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_12,SM_6">
										<b:FormGroup>
											<b:FormLabel for="emailField"> Email </b:FormLabel>
											<b:TextBox placeholder="Email" ui:field="emailField" />
										</b:FormGroup>
									</b:Column>
									<b:Column size="XS_12,SM_6">
										<b:FormGroup>
											<b:FormLabel for="codigoIntegradoraField"> Código da Integradora </b:FormLabel>
											<b:TextBox placeholder="Código da Integradora"
												ui:field="codigoIntegradoraField" />
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_12,SM_6">

										<b:FormGroup>
											<b:FormLabel for="telefoneField"> Telefone </b:FormLabel>
											<b:TextBox placeholder="Telefone" ui:field="telefoneField" />
										</b:FormGroup>
									</b:Column>
									<b:Column size="XS_12,SM_6">

										<b:FormGroup>
											<b:FormLabel for="integradoraField">Integradora</b:FormLabel>
											<g:FlowPanel>
												<b:ListBox ui:field="integradoraField">
												</b:ListBox>
											</g:FlowPanel>
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_12,SM_6">
										<!-- Painel de papeis -->
										<b:Panel type="INFO">
											<b:PanelHeader>
											    <b:Heading size="H3" text="Perfis do Usuário"/>
										    </b:PanelHeader>
										    <b:PanelBody>
											    	<b:FormGroup>
														<b:InlineCheckBox ui:field="ativoField" text="Ativo" />
													</b:FormGroup>
											    	<b:FormGroup>
														<b:InlineCheckBox ui:field="produtorField" text="Produtor" />
													</b:FormGroup>
											    	<b:FormGroup>
														<b:InlineCheckBox ui:field="tecnicoField" text="Tecnico" />
													</b:FormGroup>
											    	<b:FormGroup>
														<b:InlineCheckBox ui:field="granjeiroField" text="Granjeiro" />
													</b:FormGroup>
											</b:PanelBody>
										</b:Panel>
									</b:Column>
									<b:Column size="XS_12,SM_6">
										<!-- Painel de Senhas -->
										
										
										
										<b:Panel type="INFO" >
											<b:PanelHeader>
											    <b:Heading size="H3" text="Senhas"/>
										    </b:PanelHeader>
										    <b:PanelBody>
												<b:Anchor dataToggle="DROPDOWN" ui:field="definirSenhaAnchor">Referinir Senha</b:Anchor>
												<b:Row ui:field="blocoSenhas" visible="false">
													<b:Column size="XS_12">
												    	<b:FormGroup>
													    	<b:FormLabel for="senhaField"> Senha </b:FormLabel>
													    	<b:Input type="PASSWORD" ui:field="senhaField" placeholder="Senha" />
														</b:FormGroup>
													
													</b:Column>
													<b:Column size="XS_12">
												    	<b:FormGroup>
													    	<b:FormLabel for="confirmaSenhaField"> Confirmação de Senha </b:FormLabel>
													    	<b:Input type="PASSWORD" ui:field="confirmaSenhaField" placeholder="Senha" />
														</b:FormGroup>
													</b:Column>
													<b:Column size="XS_12">
												    	<b:FormGroup>
													    	<b:Button ui:field="removerAcessoBtn" type="DANGER" addStyleNames="pull-right">Remover Acesso</b:Button>
														</b:FormGroup>
													</b:Column>
												</b:Row>	
											</b:PanelBody>
										</b:Panel>
									</b:Column>
								</b:Row>
								<b:Button type="PRIMARY" ui:field="salvarBtn">Salvar</b:Button>
								<b:Button addStyleNames="col-xs-offset-1" ui:field="cancelarBtn">Cancelar</b:Button>
								<b:Button type="DANGER" addStyleNames="col-xs-offset-1"
									ui:field="excluirBtn">Excluir</b:Button>
							</b:FieldSet>
						</b:Form>
					</b:PanelBody>
				</b:Panel>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="XS_12">
				<gwt:CellTable ui:field="tabelaProdutores" bordered="true"
					condensed="true" striped="true" hover="true">

				</gwt:CellTable>
			</b:Column>
		</b:Row>
		<g:HTMLPanel ui:field="addProdutor" styleName="addButton">
			<span>+</span>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 