<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:l="urn:import:com.google.gwt.core.ext.linker"
	xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">


	<g:HTMLPanel>
		<b:Row>
			<b:Column size="XS_12">
				<b:Heading size="H1" styleName="page-header" text="Tabela Ração" />
			</b:Column>
		</b:Row>

		<b:Row ui:field="formRow" visible="false">
			<b:Column size="XS_12">
				<b:Panel>
					<b:PanelBody>
						<b:Form>
							<b:FieldSet>
						<b:Row>
							<b:Column size="XS_12,SM_6">
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Data Inicio </b:FormLabel>
									<b2:DatePicker autoClose="true" ui:field="DataInicioField" language="PT_BR" format="dd/mm/yyyy"/>
								</b:FormGroup>
							</b:Column>						

							<b:Column size="XS_12,SM_6">	
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Data Fim </b:FormLabel>
			                        <b2:DatePicker autoClose="true" ui:field="DataFimField" language="PT_BR" format="dd/mm/yyyy"/>
			                  	</b:FormGroup>
                            </b:Column>
						</b:Row>
						
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Peso Minimo </b:FormLabel>
									<b:TextBox placeholder="Peso Minimo" ui:field="PesoMinimoField" />
								</b:FormGroup>

						   <b:Column size="XS_12,SM_6">
								<b:FormGroup>
									<b:Button  styleName="btn btn-custom" icon="PLUS" ui:field="addItem"></b:Button>
								</b:FormGroup>
							</b:Column>
							
								<g:HTMLPanel ui:field="painelItens">
								
								</g:HTMLPanel>
								
						   	<b:Button type="PRIMARY" ui:field="salvarBtn">Salvar</b:Button>
								<b:Button  addStyleNames="col-xs-offset-1" ui:field="cancelarBtn">Cancelar</b:Button>
								<b:Button type="DANGER" addStyleNames="col-xs-offset-1" ui:field="excluirBtn">Excluir</b:Button>
							</b:FieldSet>
						</b:Form>
					</b:PanelBody>
				</b:Panel>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="XS_12">
				<gwt:CellTable ui:field="TabelaRacao" bordered="true"
					condensed="true" striped="true" hover="true">

				</gwt:CellTable>
			</b:Column>
		</b:Row>
		<g:HTMLPanel ui:field="addTipoRacao" styleName="addButton"><span>+</span>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 