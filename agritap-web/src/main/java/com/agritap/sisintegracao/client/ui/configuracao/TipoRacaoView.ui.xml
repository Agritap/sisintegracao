<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:l="urn:import:com.google.gwt.core.ext.linker" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">


	<g:HTMLPanel>
		<b:Row>
			<b:Column size="XS_12">
				<b:Heading size="H1" styleName="page-header" text="Tipo Ração" />
			</b:Column>
		</b:Row>

		<b:Row ui:field="formRow" visible="false">
			<b:Column size="XS_12">
				<b:Panel>
					<b:PanelBody>
						<b:Form>
							<b:FieldSet>


								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Carencia</b:FormLabel>
									<b:TextBox placeholder="Carencia" ui:field="carenciaField" />
								</b:FormGroup>

								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Data fim  </b:FormLabel>
									<b:TextBox placeholder="DataFim" ui:field="dataFimField" />
								</b:FormGroup>
								
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Data inicio </b:FormLabel>
									<b:TextBox placeholder="DataInicio" ui:field="dataInicioField" />
								</b:FormGroup>
								
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Medicada </b:FormLabel>
									<b:TextBox placeholder="Medicada" ui:field="medicadaField" />
								</b:FormGroup>
								
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Nome </b:FormLabel>
									<b:TextBox placeholder="Nome" ui:field="nomeField" />
								</b:FormGroup>
								
								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Tipo Animal </b:FormLabel>
									<b:TextBox placeholder="TipoAnimal" ui:field="tipoAnimalField" />
								</b:FormGroup>

								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Código da Integradora </b:FormLabel>
									<b:TextBox placeholder="Código da Integradora"
										ui:field="codigoIntegradoraField" />
								</b:FormGroup>

								<b:FormGroup>
									<b:InlineCheckBox ui:field="ativoField" text="Ativo" />
								</b:FormGroup>

								<b:FormGroup>
									<b:FormLabel for="formQuantidade"> Telefone do responsavel </b:FormLabel>
									<b:TextBox placeholder="Telefone" ui:field="telefoneField" />
								</b:FormGroup>

								<b:FormGroup>
									<b:FormLabel for="integradora" >Integradora</b:FormLabel>
									<g:FlowPanel>
										<b:ListBox b:id="integradora" ui:field="integradoraField">
										</b:ListBox>
									</g:FlowPanel>
								</b:FormGroup>
								<b:Button type="PRIMARY" ui:field="salvarBtn">Salvar</b:Button>
								<b:Button  addStyleNames="col-xs-offset-1" ui:field="cancelarBtn">Cancelar</b:Button>
								<b:Button type="DANGER" addStyleNames="col-xs-offset-1" ui:field="excluirBtn">Excluir</b:Button>
							</b:FieldSet>
						</b:Form>
					</b:PanelBody>
				</b:Panel>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="XS_12">
				<gwt:CellTable ui:field="tabelaTipoRacao" bordered="true"
					condensed="true" striped="true" hover="true">

				</gwt:CellTable>
			</b:Column>
		</b:Row>
		<g:HTMLPanel ui:field="addTipoRacao" styleName="addButton"><span>+</span>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 