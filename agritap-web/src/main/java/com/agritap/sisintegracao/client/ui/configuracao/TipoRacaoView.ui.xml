<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
	xmlns:l="urn:import:com.google.gwt.core.ext.linker" xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui">


	<g:HTMLPanel>
		<b:Row>
			<b:Column size="XS_12">
				<b:Heading size="H1" styleName="page-header" text="Tipo Ração" />
			</b:Column>
		</b:Row>

		<b:Row ui:field="formRow" visible="false">
			<b:Column size="XS_12">
				<b:Panel>
					<b:PanelBody>
						<b:ListGroup ui:field="errorBox" visible="false">
						</b:ListGroup>
						<b:Form>
							<b:FieldSet>
								<b:Row>
									<b:Column size="XS_12">
										<b:FormGroup>
											<b:FormLabel for="nomeField"> Nome </b:FormLabel>
											<b:TextBox placeholder="Nome" ui:field="nomeField" />
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_12">
										<b:FormGroup>
											<b:FormLabel for="tipoAnimalField"> Tipo Animal </b:FormLabel>
											<b:ListBox ui:field="tipoAnimalField" />
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_12">
										<b:FormGroup>
											<b:FormLabel for="carenciaField"> Carência</b:FormLabel>
											<b:TextBox placeholder="Carência" ui:field="carenciaField" />
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_6">
										<b:FormGroup>
											<b:FormLabel for="dataInicioField"> Data inicio </b:FormLabel>
											<b2:DatePicker placeholder="Data de início da utilização"
												ui:field="dataInicioField" format="dd-mm-yyyy" language="PT_BR" />
										</b:FormGroup>
									</b:Column>
									<b:Column size="XS_6">

										<b:FormGroup>
											<b:FormLabel for="dataFimField"> Data fim  </b:FormLabel>
											<b2:DatePicker placeholder="Data de fim de uso"
												ui:field="dataFimField" format="dd-mm-yyyy" language="PT_BR" />
										</b:FormGroup>
									</b:Column>
								</b:Row>
								<b:Row>
									<b:Column size="XS_12">
										<b:FormGroup>
											<b:InlineCheckBox ui:field="medicadaField"
												text="Medicada" />
										</b:FormGroup>
									</b:Column>
								</b:Row>









								<b:Button type="PRIMARY" ui:field="salvarBtn">Salvar</b:Button>
								<b:Button addStyleNames="col-xs-offset-1" ui:field="cancelarBtn">Cancelar</b:Button>
								<b:Button type="DANGER" addStyleNames="col-xs-offset-1"
									ui:field="excluirBtn">Excluir</b:Button>
							</b:FieldSet>
						</b:Form>
					</b:PanelBody>
				</b:Panel>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="XS_12">
				<gwt:CellTable ui:field="tabelaTipoRacao" bordered="true"
					condensed="true" striped="true" hover="true">

				</gwt:CellTable>
			</b:Column>
		</b:Row>
		<g:HTMLPanel ui:field="addTipoRacao" styleName="addButton">
			<span>+</span>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 